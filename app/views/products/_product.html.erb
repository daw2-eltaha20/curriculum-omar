

<div class="col-lg-4 col-md-6 mb-4">
<div class="card h-100">
    <%=link_to image_tag(product.image, class: 'card-img-top'), {action: 'show', id: product.id, controller: 'products'}%>
    <div class="card-body">
    <h4 class="card-title">
    <%= link_to product.name, product %>

    </h4>
    <h5><%=product.price%>$</h5>
    <button class="btn btn-success">Anadir cesta</button>
    </div>
    <div class="card-footer">
    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
    </div>
</div>
</div>
