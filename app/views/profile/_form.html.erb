<%= form_for @profile, remote: true do |f| %>
    <div class="form-group">
      <h4 class="control-label">Tus datos:</h4>
    </div>

    <div class="item form-group<%= @profile.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :nombre, "Nombre: " %>
      <div class="input-group">
        <%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"Introduzca su nombre."} %>        
        <%if @profile.errors[:nombre].any? %>
          <p class="bg-danger"><%= @profile.errors[:nombre].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>
