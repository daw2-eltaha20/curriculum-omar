<!DOCTYPE html>
<html>
  <head>
    <title>OmarCurriculum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">Start Bootstrap</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <%= form_tag "/searchs/create", method: :get, remote: true, id: "search-form" do%>
            <%= text_field_tag :keyword, nil, placeholder: "Que estas buscando"%>
            <%= content_tag :button, type: :submit do%>
                Buscar
             <%end%>
        <%end%>

      </div>
    </div>
  </nav>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <span class="d-block d-lg-none">Clarence Taylor</span>            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <%= link_to '/' do%>
                    <p class="nav-link js-scroll-trigger">Home</p>
                    <%end%>
                  </li>
                  <li class="nav-item">
                    <%= link_to '/profiles' do%>
                    <p class="nav-link js-scroll-trigger">Profile</p>
                    <%end%>
                  </li>
                  <li class="nav-item">
                    <%= link_to '/products' do%>
                    <p class="nav-link js-scroll-trigger">Products</p>
                    <%end%>
                  </li>
                   <li class="nav-item">
                    <%= link_to destroy_user_session_path, method: :delete, html_options: {class: "bg-info"} do%>
                    <p class="nav-link js-scroll-trigger">Logout</p>
                    <%end%>
                  </li>
                </ul>
            </div>
        </nav>
    <%= yield %>
  </body>
</html>
